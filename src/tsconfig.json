{
    "compilerOptions": {
        "target": "es6",
        "strictNullChecks": true,
        "sourceMap": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "../build",
        "sourceRoot": "./",
        "rootDir": "./",
        "module": "commonjs",
        "declaration": true,
        "noUnusedLocals": true,
        "baseUrl": "./",
        "paths" : {
          "/*": [
              "./*"
            ]
        }
    },
    "exclude": [
        "tests",
        "**/*.spec.ts",
        "**/_*"
    ]
}
